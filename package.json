{
  "name": "up-n-down",
  "version": "0.3.0",
  "private": false,
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node ./src/app.js",
    "build": "tsup ./src/app.ts --format esm --clean --minify --env.NODE_ENV production",
    "postbuild": "cpy ./views ../dist --cwd=src --parents",
    "dev": "tsup ./src/app.ts --format esm --clean --minify --env.NODE_ENV development --watch --onSuccess 'npm run post-dev'",
    "post-dev": "npm run postbuild && node ./dist/app.js",
    "lint": "eslint ./src",
    "migrate": "node ./scripts/migrate.js",
    "test": "c8 --reporter=text ava",
    "coverage": "c8 --reporter=html ava",
    "typesync": "typesync"
  },
  "dependencies": {
    "argon2": "^0.28.3",
    "cache-manager": "^3.6.0",
    "connect-pg-simple": "^7.0.0",
    "connect-redis": "^6.0.0",
    "cookie-parser": "~1.4.6",
    "debug": "~4.3.3",
    "dompurify": "^2.3.4",
    "dotenv": "^10.0.0",
    "express": "~4.17.2",
    "express-promise-router": "^4.1.1",
    "express-rate-limit": "^6.0.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.14.0",
    "http-errors": "^2.0.0",
    "jsdom": "^19.0.0",
    "marked": "^4.0.8",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "pg": "^8.7.1",
    "postgres-migrations": "^5.3.0",
    "pug": "3.0.2",
    "redis": "^4.0.1",
    "serialize-error": "^9.0.0",
    "sql-tag": "^1.0.1",
    "tall": "^4.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/cache-manager": "^3.4.2",
    "@types/connect-pg-simple": "^7.0.0",
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "~1.4.2",
    "@types/debug": "~4.1.7",
    "@types/dompurify": "^2.3.2",
    "@types/eslint": "^8.2.1",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/http-errors": "~1.8.1",
    "@types/jsdom": "^16.2.14",
    "@types/marked": "^4.0.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.4",
    "@types/nodemon": "^1.19.1",
    "@types/pg": "^8.6.3",
    "@types/pug": "2.0.6",
    "@types/uuid": "^8.3.3",
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "cpy-cli": "^3.1.1",
    "eslint": "^8.5.0",
    "eslint-config-xo": "^0.39.0",
    "nodemon": "^2.0.15",
    "tsup": "^5.11.9",
    "typescript": "^4.5.4",
    "typescript-sql-tagged-template-plugin": "^0.2.0",
    "typesync": "^0.8.0"
  },
  "c8": {
    "include": [
      "src/**/*.js"
    ],
    "all": true
  },
  "nodemonConfig": {
    "ignore": [
      "public/**/*"
    ]
  }
}
