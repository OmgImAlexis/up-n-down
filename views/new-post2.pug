extends layout

append head
    link(rel='stylesheet', href='/stylejeets/new-post2.css')

block content
    if errors.length
            ul
                each error in errors
                    li #{error.msg}
    form(method="post")
        div
            label(for="title") Title
            textarea(name="title" id="title")=title

        div
            label(for="link") Link(optional)
            input(name="link" id="link" value=`${link}`)

        div
            label(for="text_content") Content(optional)
            textarea(name="text_content" id="text_content") #{textContent}

        div
            label(for="tags") Tags(optional, separate with commas)
            input(name="tags" id="tags" value=`${tags}`)

        div
            input(type="submit" value="Create Post")
