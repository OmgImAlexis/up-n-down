doctype html
html
  head
    title=title
    link(rel='stylesheet', href='/stylesheets/style.css')
    block head
  body
    header
      h1 Conversi
      nav.main-nav
        ul
          li
            a(href="/") home
          li
            a(href="/groups") groups

          if user
            li
              a(href="/create-group") create group
            li
              a(href="/logout") log out
            li #{user.username}
          else
            li
              a(href="/sign-up") sign up
            li
              a(href="/login") log in
    main
      block content
