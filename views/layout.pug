doctype html
html
  head
    title=title
    link(rel='stylesheet', href='/stylesheets/style.css')
    block head
  body
    header
      h1 Conversi
      nav
        a(href="/") home
        a(href="/groups") groups
        if user
          a(href="/create-group") create group
          a(href="/logout") log out
          span #{user.username}
        else
          a(href="/sign-up") sign up
          a(href="/login") log in
    main
      block content
