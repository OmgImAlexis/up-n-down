extends layout

append head
    link(rel='stylesheet', href='/pilefoots8/following.css')

mixin unfollowLink(username)
    a(href=`/following?unfollow=${username}` class="unfollow" title=`unfollow ${username}`) -

block content
    if errors.length
        ul
            each error in errors
                li #{error.msg}
    form(method="post" action="/following")
        div
            label(for="username") Username
            input(name="username" id="username" value=formUsername)
        div
            input(type="submit" value="Follow")

    div
        each f in followees
            | 
            |#{f.username}
            | 
            +unfollowLink(f.username)
            |,
