extends group-admin

block content3
    - const isViewAnyone = group_view_mode == 'anyone'
    - const isViewMembers = group_view_mode == 'members-only'

    - const isPostAnyone = group_post_mode == 'anyone-that-can-view'
    - const isPostMembers = group_post_mode == 'only-flagged-members'

    - const isCommentAnyone = group_comment_mode == 'anyone-that-can-view'
    - const isCommentMembers = group_comment_mode == 'only-flagged-members'

    if errors.length
        ul
            each error in errors
                li #{error.msg}
    form(method="post")
        div Group Viewing Mode
        div
            input(type="radio" name="group_view_mode" id="group_view_mode0" value="anyone" checked=isViewAnyone)
            label(for="group_view_mode0") anyone can view

        div
            input(type="radio" name="group_view_mode" id="group_view_mode1" value="members-only" checked=isViewMembers)
            label(for="group_view_mode1") only members can view

        div Group Posting Mode
        div
            input(type="radio" name="group_post_mode" id="group_post_mode0" value="anyone-that-can-view" checked=isPostAnyone)
            label(for="group_post_mode0") anyone that can view the group

        div
            input(type="radio" name="group_post_mode" id="group_post_mode1" value="only-flagged-members" checked=isPostMembers)
            label(for="group_post_mode1") only members that have "poster" checked

        div Group Commenting Mode
        div
            input(type="radio" name="group_comment_mode" id="group_comment_mode0" value="anyone-that-can-view" checked=isCommentAnyone)
            label(for="group_comment_mode0") anyone that can view the group

        div
            input(type="radio" name="group_comment_mode" id="group_comment_mode1" value="only-flagged-members" checked=isCommentMembers)
            label(for="group_comment_mode1") only members that have "commenter" checked

        input(type="submit" value="Update")
