extends layout

mixin followLink(username)
    a(href=`/following?follow=${username}` class="follow" title=`follow ${username}`) +

mixin unfollowLink(username)
    a(href=`/following?unfollow=${username}` class="unfollow" title=`unfollow ${username}`) -

block content
    if posts.length
        .posts

            each post in posts
                div
                    if post.is_visible
                        if post.link === null
                            a(href=`/p/${post.public_id}`) #{post.title}
                        else
                            a(href=post.link)= post.title
                    else
                        if post.link === null
                            a(href=`/p/${post.public_id}`) ???
                        else
                            |???

                    div
                        | by #{post.username}
                        if !post.is_visible
                            +followLink(post.username)
                        else if post.user_id != user.user_id
                            +unfollowLink(post.username)
                        | 
                        |on #{post.created_on}
                        | | 
                        a(href=`/p/${post.public_id}`) comments(#{post.num_comments})
    else
        span no posts
