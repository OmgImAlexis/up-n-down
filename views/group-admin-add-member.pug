extends group-admin

block content3
    if errors.length
        ul
            each error in errors
                li #{error.msg}
    form(method="post")
        input(name="username" placeholder="username")
        input(type="submit" value="Add as Member")

    if members.length
        table
            each m in members
                tr
                    td #{m.username}
                    td
                        form(method="post")
                            input(type="submit" value="Remove")
                            input(type="hidden" name="remove_user_id" value=`${m.user_id}`)